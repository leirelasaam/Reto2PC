<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3308/laravel?useSSL=false</property>
        <property name="hibernate.connection.username">sail</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">none</property>
        <property name="hibernate.search.autoregister_listeners">true</property>
        <property name="hibernate.validator.apply_to_ddl">false</property>
        <mapping resource="pojos/Meetings.hbm.xml"/>
        <mapping resource="pojos/Modules.hbm.xml"/>
        <mapping resource="pojos/Schedules.hbm.xml"/>
        <mapping resource="pojos/Participants.hbm.xml"/>
        <mapping resource="pojos/Users.hbm.xml"/>
        <mapping resource="pojos/Cycles.hbm.xml"/>
        <mapping resource="pojos/Enrollments.hbm.xml"/>
        <mapping resource="pojos/Roles.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
